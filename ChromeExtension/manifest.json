{
  "manifest_version": 3,
  "name": "Hello Yeetcode",
  "version": "1.0",
  "description": "A simple Hello World Chrome extension customized for Yeetcode.",
  "permissions": ["storage"],
  "host_permissions": ["https://*.firebaseio.com/"],
  "background": {
    "service_worker": "Frontend/assets/js/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "Frontend/main-screen.html",
    "default_icon": "Frontend/assets/images/logo.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["/firebase-app.js", "/firebase-database.js"],
      "matches": ["<all_urls>"]
    }
  ]
}